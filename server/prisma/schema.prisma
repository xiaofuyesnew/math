datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Quiz {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  conditions String?
  content String
  recordIds String
}

model Qustion {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  description String
  content Json @db.Json
  count Int @default(1)
}

model Wrong {
  id Int @id @default(autoincrement())
  questionId Int
  createdAt DateTime @default(now())
  record String
  correct Boolean @default(false)
}

model Record {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  finish Boolean
  time String @default("00:00")
  correct Int
  wrong Int
}